<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.reanimator.analogclock.AnalogClockView
        android:id="@+id/analog_clock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:handsStyle="normal"
        custom:secondHandColor="#960522" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/second_hand_color_chip_group"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:checkedChip="@id/normal_chip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/analog_clock"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/thin_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="@string/thin" />

        <com.google.android.material.chip.Chip
            android:id="@+id/normal_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="@string/normal" />

        <com.google.android.material.chip.Chip
            android:id="@+id/thick_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="@string/thick" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/color_of_second_hand_in_hex"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/second_hand_color_chip_group"
        app:layout_constraintTop_toBottomOf="@id/second_hand_color_chip_group" />

    <EditText
        android:id="@+id/input_hand_color"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/_00ff37"
        app:layout_constraintStart_toStartOf="@id/color_text"
        app:layout_constraintTop_toBottomOf="@id/color_text" />

    <Button
        android:id="@+id/change_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/change"
        app:layout_constraintBottom_toBottomOf="@id/input_hand_color"
        app:layout_constraintStart_toEndOf="@id/input_hand_color"
        app:layout_constraintTop_toTopOf="@id/input_hand_color" />


</androidx.constraintlayout.widget.ConstraintLayout>